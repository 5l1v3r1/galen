@objects
    header         div[data-id="header"]
    header.logo    div[data-id="header.logo"]
    header.text    div[data-id="header.text"]
    menu           div[data-id="menu"]
    menu.item-*    ul.menu-item > li
    content        div[data-id="content"]
    welcome_block  div[data-id="welcome_block"]
    greeting       div[data-id="greeting"]
    text_block-1   div[data-id="text_block-1"]
    text_block-2   div[data-id="text_block-2"]
    text_block-3   div[data-id="text_block-3"]
    login_button   div[data-id="login_button"]
    footer         div[data-id="footer"]

= Skeleton =
    | header, menu, content, footer are aligned vertically above each other with ~0px margin

    header:
        centered horizontally inside screen 1px
        height 69px
        inside screen 0px top

    menu:
        centered horizontally inside screen 1px
        height 63px
        inside screen

    content:
        centered horizontally inside screen 1px
        inside screen

    footer:
        centered horizontally inside screen 1px
        inside screen 0px bottom

= header elements =
    | header.logo should be squared with 48px size

    header.logo:
        inside header 13px top, 0px left, 8px bottom
        left-of header.text 22px

    header.text:
        height 39px
        inside header 20px top, 10px bottom

= menu elements =
    | menu.item-* are aligned horizontally next to each other with 0px margin

    menu.item-1:
        height 63px
        inside menu 0px top left bottom

    menu.item-2:
        height 63px
        inside menu 0px top bottom

    menu.item-3:
        height 63px
        inside menu 0px top bottom

    menu.item-4:
        height 63px
        inside menu 0px top bottom

= content elements =
    | greeting, text_block-1 are aligned vertically above each other with 10px margin
    | text_block-* are aligned vertically above each other with 15px margin

    welcome_block:
        centered horizontally inside content 1px
        inside content 20px top left right

    greeting:
        centered horizontally inside welcome_block 1px
        height 69px
        inside welcome_block 30px left right

    text_block-1:
        centered horizontally inside welcome_block 1px
        height 30px
        inside welcome_block 30px left right

    text_block-2:
        centered horizontally inside welcome_block 1px
        height 31px
        inside welcome_block 30px left right

    text_block-3:
        centered horizontally inside welcome_block 1px
        height 45px
        inside welcome_block 30px left right

    login_button:
        height 45px
        inside text_block-3 0px top left bottom
        width 79px

